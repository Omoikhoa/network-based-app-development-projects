<%- include('../partials/header.ejs')%>
<main>
    <div class="item-details">
        <div class="item-image">
            <img src="<%= manga.image%>" alt="Item Detail">
        </div>
        <div class="item-info">
            <h1><%= manga.title%></h1>
            <p><strong>Condition:</strong> <%= manga.condition%></p>
            <p><strong>Price:</strong> $<%= manga.price%></p>
            <p><strong>Total Offers:</strong> <%= manga.totalOffers %></p>
            <p><strong>Seller:</strong>
                <%= manga.seller.firstName + ' ' + manga.seller.lastName%>
            </p>
            <p><strong>Description:</strong> <%= manga.details%></p>
            <% if (manga.active) { %>
                <p><strong>Highest Offer:</strong> $<%= manga.highestOffer %></p>
                <form action="/mangas/<%= manga._id %>/offers" method="POST">
                    <input type="number" name="amount" step="0.01" min="0.01" required>
                    <button type="submit" class="button submit-button">Make an Offer</button>
                </form>
            <% } else { %>
                <p class="no-items">This item is no longer available.</p>
            <% } %>
        </div>
    </div>
</main>
<%- include('../partials/footer.ejs')%>